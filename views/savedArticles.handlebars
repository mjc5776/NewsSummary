<div class="container">
  <div class="col-md-12 jumbotron">
    <div class="text-center">
      <h1> Saved Articles</h1>
    </div>
  </div>
  {{#each articles }}
  <div class="card">
    <div class="card-header">
      Article
    </div>
    <div class="card-body">
      <h5 class="card-title">{{title}}</h5>
      <!--<p class="card-text">{{link}}</p>-->
      <a href={{this.link}} target="_blank" class="card-link">{{this.link}}</a>
      <div class="card-footer">
        <button type="button" class="btn btn-danger delete" id={{id}}>Delete</button>
        <button type="button" class="btn btn-warning addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
      </div>
    </div>
  </div> 
  {{else}}
  <p>No saved articles</p>
  {{/each}}

</div>

<!--Clicked Notes Modal-->
{{#each article}}
    {{> notes-modal }}
{{/each}}